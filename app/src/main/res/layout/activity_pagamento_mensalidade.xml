<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerPagamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activitys.Pagamentos.PagamentoMensalidade">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradiente" />

    <EditText
        android:id="@+id/editNomePagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/borda_mensalidade"
        android:drawableStart="@drawable/ic_nome_pagamento"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Digite seu nome completo"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/card_drawer_bottom_label_disabled"
        android:textCursorDrawable="@color/vermelho_forte" />

    <EditText
        android:id="@+id/editCpfPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/borda_mensalidade"
        android:drawableStart="@drawable/ic_cpf_pagamento"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Digite seu cpf"
        android:inputType="number"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/card_drawer_bottom_label_disabled"
        android:textCursorDrawable="@color/vermelho_forte" />

    <EditText
        android:id="@+id/editTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/borda_mensalidade"
        android:cursorVisible="false"
        android:drawableStart="@drawable/ic_telefone_pagamento"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Digite seu telefone"
        android:inputType="number"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/card_drawer_bottom_label_disabled"
        android:textCursorDrawable="@color/vermelho_forte" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPagamentoCartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradiente_botao"
        android:drawableStart="@drawable/ic_cartao"
        android:drawableEnd="@drawable/ic_boleto"
        android:padding="10dp"
        android:text="CartÃ£o ou Boleto"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPagamentoPix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradiente_botao"
        android:drawableStart="@drawable/ic_pix"
        android:drawableEnd="@drawable/ic_pix"
        android:drawableTint="#EEE5E5"
        android:padding="10dp"
        android:text="pix"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonValidarPagamentoPix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gradiente_botao"
        android:drawableStart="@drawable/ic_pix"
        android:drawableEnd="@drawable/ic_pix"
        android:drawableTint="#EEE5E5"
        android:padding="10dp"
        android:text="Validar pagamento \n pix/especie"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
